{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@mfe-angular/*": ["packages/mfe-angular/src/*"],
      "@mfe-vue/*": ["packages/mfe-vue/src/*"],
      "@shell-react/*": ["packages/shell-react/src/*"]
    }
  },
  "references": [
    { "path": "./packages/mfe-angular" },
    { "path": "./packages/mfe-vue" },
    { "path": "./packages/shell-react" }
  ]
}